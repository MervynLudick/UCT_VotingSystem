@model ElectionViewModel
@{
}

<div class="container my-5">
    <div class="row text-center mb-4">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Total Votes Cast</h5>
                    <p class="display-4">@Model.TotalVotesCast</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">% of Population Voted</h5>
                    <p class="display-4">@Model.PercentagePopulatioVoted%</p>
                </div>
            </div>
        </div>
    </div>

    <h3 class="text-center mb-4">Voting Leaderboard</h3>
    <table class="table table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Candidate</th>
                <th scope="col"># Votes</th>
                <th scope="col">% Votes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var candidate in Model.Candidates.OrderByDescending(x => x.Votes))
            {
                <tr>
                    <td class="d-flex align-items-center">
                        <img src="/images/@candidate.ImageUrl" alt="Candidate Image" class="rounded-circle me-3" style="width:50px; height:50px; object-fit:cover;">
                        <span>@candidate.Name</span>
                    </td>
                    <td>@candidate.Votes</td>
                    <td style="width:40%;">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: @candidate.PercentagOfVotes%;" aria-valuenow="@candidate.PercentagOfVotes" aria-valuemin="0" aria-valuemax="100">
                                @candidate.PercentagOfVotes%
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
